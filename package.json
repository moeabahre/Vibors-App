{
  "name": "@vibors/design-tokens",
  "version": "1.0.0",
  "description": "Vibors design tokens",
  "scripts": {
    "build": "style-dictionary build --config config/style-dictionary.config.js",
    "build:web": "style-dictionary build --config config/style-dictionary.config.js --platform web",
    "build:ios": "style-dictionary build --config config/style-dictionary.config.js --platform ios",
    "build:android": "style-dictionary build --config config/style-dictionary.config.js --platform android",
    "build:tailwind": "node scripts/generate-tailwind.js",
    "validate": "node scripts/validate-tokens.js",
    "clean": "rimraf build/"
  },
  "devDependencies": {
    "style-dictionary": "^3.9.2",
    "@tokens-studio/sd-transforms": "^0.14.0",
    "rimraf": "^5.0.0"
  }
}
